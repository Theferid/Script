                              <form action="/tickets" method="get" id="history-search">
                                <div class="input-group ticketPage">
                                   <input type="text" name="search" class="form-control" value=""
                                      placeholder="Search">
                                   <span class="input-group-btn">
                                   <button type="submit" class="btn btn-default"><i class="fa fa-search" aria-hidden="true"></i></button>
                                   </span>
                                </div>
                             </form>
                            </div>
                       </div>
                       <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-striped" id="ticketTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Subject</th>
                                        <th>Status</th>
                                        <th class="nowrap">Last update</th>
                                      </tr>
                                </thead>
                                <tbody>
                                           <td colspan="9">
              {% for ticket in ticketList %}
                <tr>
                  <td>{{ ticket['ticket_id'] }}</td>
                  {% if ticket["support_new"] == 2 %}
                    <td><a href="tickets/{{ ticket['ticket_id'] }}"><strong>{{ ticket['subject'] }}</strong></a></td>
                  {% else %}
                    <td><a href="tickets/{{ ticket['ticket_id'] }}">{{ ticket['subject'] }}</a></td>
                  {% endif %}
                  <td>{{ ticket['status'] }}</td>
                  <td><span class="nowrap">{{ ticket['lastupdate_time'] }}</span></td>
                </tr>
              {% endfor %}
</td>
                                                                    </tbody>
                            </table>
                                                    </div>
                       </div>
                    </div>
                </div>
            </div>
       </div>
    </div>
</section>

  
